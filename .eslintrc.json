{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-plusplus": "off",
    "space-unary-ops": [
      2, {
        "words": true,
        "nonwords": true,
        "overrides": {
          "new": false,
          "++": true
        }
  }],
    "no-use-before-define": ["error", { 
      "classes": false,
      "functions": false,
      "variables": false
    }],
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [ 1, {
      "js": "always", "json": "always"
    }],
    "max-len": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}